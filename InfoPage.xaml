<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="Protecc.InfoPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:protecc="clr-namespace:Protecc"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ScrollView>
        <Grid
            ColumnDefinitions="100, *"
            ColumnSpacing="20"
            Margin="20"
            RowDefinitions="125, *"
            RowSpacing="20">
            <protecc:Sidebar
                Grid.Column="0"
                Grid.Row="0"
                Grid.RowSpan="2" />

            <Grid Grid.Column="1" Grid.Row="0">
                <protecc:Header Title="Information" />
            </Grid>

            <!--  Main Content  -->
            <Grid
                ColumnSpacing="10"
                Grid.Column="1"
                Grid.Row="1"
                RowSpacing="10">
                <Frame
                    BackgroundColor="{StaticResource Tertiary}"
                    CornerRadius="10"
                    Grid.Column="0"
                    Grid.Row="0">
                    <StackLayout>
                        <Frame
                            CornerRadius="10"
                            Margin="0"
                            Padding="0">
                            <Image
                                Aspect="AspectFill"
                                HeightRequest="150"
                                HorizontalOptions="FillAndExpand"
                                Source="network.jpg"
                                VerticalOptions="Center" />
                        </Frame>
                        <Label
                            FontSize="32"
                            HorizontalOptions="Start"
                            Text="Applikationsinformationen"
                            TextColor="{StaticResource Secondary}" />
                        <Label
                            FontSize="24"
                            HorizontalOptions="Start"
                            Padding="20"
                            Text="!Diese Anwendung ist noch im Wamndel!"
                            TextColor="{StaticResource PrimaryDarkText}" />
                        <Label
                            FontSize="20"
                            HorizontalOptions="Start"
                            Text="Aufgrund von mangelnder Zeit sind nur Bruchteile der geplanten Profile wirklich implementiert. Auf den Code kann man auch kaum stolz sein. Die nichtvorhandene Konsistenz und die Art und Weise, auf welche ich Daten Speichere könnte man am Lagerfeuer als Horrorgeschichte verkaufen. Wie dem auch sei, es ist begrenzte Funktionalität vorhanden."
                            TextColor="{StaticResource Black}" />
                        <Label
                            FontSize="24"
                            HorizontalOptions="Start"
                            Padding="20"
                            Text="Bedienungs Hilfe"
                            TextColor="{StaticResource PrimaryDarkText}" />
                        <Label
                            FontSize="20"
                            HorizontalOptions="Start"
                            Text="Alle Angaben sollten möglichst pessimistisch gemacht werden um das die best möglichen Resultate zu erhalten. Deine Daten werden gespeichert, können aber durch ein erneutes ausfüllen des Formulars bearbeitet werden. Die Daten über dein Einkommen werden automatisch ausgefüllt, die zu deinen Ausgaben aber nicht. Sei also vorsichtig wenn du speicherst."
                            TextColor="{StaticResource Black}" />
                    </StackLayout>
                </Frame>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>