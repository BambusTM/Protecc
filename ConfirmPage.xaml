<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="Protecc.ConfirmPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:protecc="clr-namespace:Protecc"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ScrollView>
        <Grid
            ColumnDefinitions="100, *"
            ColumnSpacing="20"
            Margin="20"
            RowDefinitions="125, *"
            RowSpacing="20">
            <protecc:Sidebar
                Grid.Column="0"
                Grid.Row="0"
                Grid.RowSpan="2" />

            <Grid Grid.Column="1" Grid.Row="0">
                <protecc:Header Title="Angaben BestÃ¤tigen" />
            </Grid>

            <Grid
                ColumnDefinitions="*, *"
                ColumnSpacing="10"
                Grid.Column="1"
                Grid.Row="1"
                RowSpacing="10">

                <!--  Main Content  -->
                <Frame
                    BackgroundColor="{StaticResource Tertiary}"
                    CornerRadius="10"
                    Grid.Column="0"
                    Padding="20">
                    <StackLayout Spacing="10">

                        <!--  Title  -->
                        <Label
                            FontSize="32"
                            HorizontalOptions="Start"
                            Text="Deine Angaben"
                            TextColor="{StaticResource Secondary}" />
                    </StackLayout>
                </Frame>

                <Frame
                    BackgroundColor="{StaticResource Tertiary}"
                    CornerRadius="10"
                    Grid.Column="1"
                    Padding="20">
                    <StackLayout Spacing="10">

                        <!--  Title  -->
                        <Label
                            FontSize="32"
                            HorizontalOptions="Start"
                            Text="Abschliessen"
                            TextColor="{StaticResource Secondary}" />
                    </StackLayout>
                </Frame>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>