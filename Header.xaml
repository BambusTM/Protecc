<?xml version="1.0" encoding="utf-8" ?>

<ContentView
    x:Class="Protecc.Header"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:protecc="clr-namespace:Protecc"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Frame>
        <Frame.Background>
            <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                <GradientStop Color="{StaticResource Beige}" Offset="0.0" />
                <GradientStop Color="{StaticResource Secondary}" Offset="0.5" />
            </LinearGradientBrush>
        </Frame.Background>
        <StackLayout Orientation="Vertical" VerticalOptions="Center">
            <Label
                FontAttributes="Bold"
                FontSize="24"
                HorizontalOptions="Start"
                Text="{Binding Title, Source={RelativeSource AncestorType={x:Type protecc:Header}}}"
                TextColor="{StaticResource PrimaryDark}" />
            <Label
                FontSize="16"
                HorizontalOptions="Start"
                Text="Benutzername"
                TextColor="{StaticResource PrimaryDark}" />
        </StackLayout>
    </Frame>
</ContentView>