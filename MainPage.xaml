<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    BackgroundColor="{StaticResource Gray900}"
    x:Class="Protecc.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:local="clr-namespace:Protecc"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <Grid
            ColumnDefinitions="100, *"
            ColumnSpacing="20"
            Margin="20"
            RowDefinitions="125, *"
            RowSpacing="20">
            <local:Sidebar
                Grid.Column="0"
                Grid.Row="0"
                Grid.RowSpan="2" />

            <Grid Grid.Column="1" Grid.Row="0">
                <local:Header Title="Finanzübersicht" />
            </Grid>

            <!--  Main Content  -->
            <Grid
                ColumnSpacing="10"
                Grid.Column="1"
                Grid.Row="1"
                RowSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Expenses  -->
                <Frame
                    BackgroundColor="{StaticResource Tertiary}"
                    CornerRadius="10"
                    Grid.Column="0"
                    Grid.Row="1"
                    Padding="20">
                    <StackLayout Spacing="10">
                        <Label
                            FontSize="32"
                            HorizontalOptions="Start"
                            Text="Ausgaben im Vergleich"
                            TextColor="{StaticResource Secondary}" />
                    </StackLayout>
                </Frame>

                <Frame
                    BackgroundColor="{StaticResource Tertiary}"
                    CornerRadius="10"
                    Grid.Column="1"
                    Grid.Row="0"
                    Padding="20">
                    <StackLayout Spacing="10">
                        <Label
                            FontSize="32"
                            HorizontalOptions="Start"
                            Text="Einkommen"
                            TextColor="{StaticResource Secondary}" />

                        <TableView Intent="Form">
                            <TableRoot>
                                <TableSection Title="Einkommensquellen">
                                    <ViewCell>
                                        <StackLayout Orientation="Horizontal" Padding="5">
                                            <Label
                                                FontSize="16"
                                                HorizontalOptions="Start"
                                                Text="Gehalt" />
                                            <Label
                                                FontSize="16"
                                                HorizontalOptions="EndAndExpand"
                                                Text="{Binding Salary, StringFormat='{0:C}'}" />
                                        </StackLayout>
                                    </ViewCell>

                                    <ViewCell>
                                        <StackLayout Orientation="Horizontal" Padding="5">
                                            <Label
                                                FontSize="16"
                                                HorizontalOptions="Start"
                                                Text="Nebenverdienst" />
                                            <Label
                                                FontSize="16"
                                                HorizontalOptions="EndAndExpand"
                                                Text="{Binding Sideline, StringFormat='{0:C}'}" />
                                        </StackLayout>
                                    </ViewCell>
                                </TableSection>
                            </TableRoot>
                        </TableView>
                    </StackLayout>
                </Frame>

                <!--  Tipps und Tricks, um Geld zu sparen  -->
                <Frame
                    BackgroundColor="{StaticResource Tertiary}"
                    CornerRadius="10"
                    Grid.Column="0"
                    Grid.Row="1"
                    Padding="20">
                    <StackLayout Spacing="10">
                        <!--  Title for the tips and tricks section  -->
                        <Label
                            FontSize="32"
                            HorizontalOptions="Start"
                            Text="Tipps und Tricks, um Geld zu sparen"
                            TextColor="{StaticResource Secondary}" />

                        <!--  Display a list of money-saving tips  -->
                        <StackLayout Spacing="5">
                            <Label
                                FontSize="16"
                                Text="1. Erstelle ein Budget und halte dich daran"
                                TextColor="{StaticResource Primary}" />
                            <Label
                                FontSize="16"
                                Text="2. Vergleiche Preise, bevor du Einkäufe machst"
                                TextColor="{StaticResource Primary}" />
                            <Label
                                FontSize="16"
                                Text="3. Vermeide unnötige Abonnements und Kündige ungenutzte Dienste"
                                TextColor="{StaticResource Primary}" />
                            <Label
                                FontSize="16"
                                Text="4. Bereite Mahlzeiten zu Hause statt auswärts zu essen"
                                TextColor="{StaticResource Primary}" />
                            <Label
                                FontSize="16"
                                Text="5. Kaufe gebrauchte Artikel, wenn möglich"
                                TextColor="{StaticResource Primary}" />
                            <Label
                                FontSize="16"
                                Text="6. Setze dir Sparziele und verfolge deinen Fortschritt"
                                TextColor="{StaticResource Primary}" />
                        </StackLayout>
                    </StackLayout>
                </Frame>

                <!--  Expenses  -->
                <Frame
                    BackgroundColor="{StaticResource Tertiary}"
                    CornerRadius="10"
                    Grid.Column="0"
                    Padding="20">
                    <StackLayout Spacing="10" x:Name="ExpenseChartLayout">

                        <!--  Title  -->
                        <Label
                            FontSize="32"
                            HorizontalOptions="Start"
                            Text="Ausgaben im Vergleich"
                            TextColor="{StaticResource Secondary}" />
                    </StackLayout>
                </Frame>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>