<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    BackgroundColor="{StaticResource Primary}"
    x:Class="Protecc.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:local="clr-namespace:Protecc"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid ColumnDefinitions="200, *" RowDefinitions="100, *">
        <StackLayout
            BackgroundColor="{StaticResource Beige}"
            Grid.Column="0"
            Grid.Row="0"
            Grid.RowSpan="2"
            Padding="20">
            <local:Sidebar />
        </StackLayout>
        <Grid
            BackgroundColor="{StaticResource Secondary}"
            Grid.Column="1"
            Grid.Row="0"
            Padding="20">
            <local:Header />
        </Grid>

        <!--  Main Content  -->
        <Grid
            ColumnSpacing="10"
            Grid.Column="1"
            Grid.Row="1"
            Padding="20"
            RowSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Overview Chart  -->
            <Frame
                BackgroundColor="{StaticResource PrimaryDark}"
                CornerRadius="10"
                Grid.Column="0"
                Grid.Row="0"
                Padding="10">
                <Label
                    FontSize="18"
                    HorizontalOptions="Start"
                    Text="Übersicht"
                    TextColor="{StaticResource Beige}" />
                <!--  Add Chart here  -->
            </Frame>

            <!--  Unforeseen Expenses  -->
            <Frame
                BackgroundColor="{StaticResource PrimaryDark}"
                CornerRadius="10"
                Grid.Column="1"
                Grid.Row="0"
                Padding="10">
                <Label
                    FontSize="18"
                    HorizontalOptions="Start"
                    Text="Unvorhergesehene Ausgaben"
                    TextColor="{StaticResource Beige}" />
                <!--  Add list here  -->
            </Frame>

            <!--  Expenses: Auto  -->
            <Frame
                BackgroundColor="{StaticResource PrimaryDark}"
                CornerRadius="10"
                Grid.Column="0"
                Grid.Row="1"
                Padding="10">
                <Label
                    FontSize="18"
                    HorizontalOptions="Start"
                    Text="Ausgaben: Auto"
                    TextColor="{StaticResource Beige}" />
                <!--  Add bar chart here  -->
            </Frame>

            <!--  Timespan  -->
            <Frame
                BackgroundColor="{StaticResource PrimaryDark}"
                CornerRadius="10"
                Grid.Column="1"
                Grid.Row="1"
                Padding="10">
                <Label
                    FontSize="18"
                    HorizontalOptions="Start"
                    Text="Zeitspanne"
                    TextColor="{StaticResource Beige}" />
                <!--  Add donut chart here  -->
            </Frame>
        </Grid>
    </Grid>
</ContentPage>