<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    BackgroundColor="{StaticResource Gray900}"
    x:Class="Protecc.AnalyzisPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:protecc="clr-namespace:Protecc"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <Grid
            ColumnDefinitions="100, *"
            ColumnSpacing="20"
            Margin="20"
            RowDefinitions="125, *"
            RowSpacing="20">
            <protecc:Sidebar
                Grid.Column="0"
                Grid.Row="0"
                Grid.RowSpan="2" />

            <Grid Grid.Column="1" Grid.Row="0">
                <protecc:Header Title="Finanzanalyse" />
            </Grid>

            <Grid
                ColumnDefinitions="*, *"
                ColumnSpacing="10"
                Grid.Column="1"
                Grid.Row="1"
                RowSpacing="10">

                <protecc:IncomeForm Grid.Column="0" />

                <protecc:ExpenseForm Grid.Column="1" />
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>